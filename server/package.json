{
  "name": "server",
  "version": "1.0.0",
  "description": "Backend API for Imagiana",
  "main": "src/app.ts",
  "repository": "https://github.com/reimarrosas/imagiana.git",
  "author": "Reimar Rosas <reimarrosas0208@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "postInstall": "yarn build &&  yarn migrate:latest",
    "migrate:make": "knex --knexfile ./src/db/knexfile.ts migrate:make -x ts",
    "migrate:latest": "knex --knexfile ./src/db/knexfile.ts migrate:latest",
    "migrate:rollback": "knex --knexfile ./src/db/knexfile.ts migrate:rollback"
  },
  "dependencies": {
    "argon2": "^0.28.5",
    "bunyan": "^1.8.15",
    "cloudinary": "^1.30.0",
    "connect-redis": "^6.1.3",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^6.4.0",
    "express-session": "^1.17.3",
    "helmet": "^5.1.0",
    "knex": "^2.1.0",
    "morgan": "^1.10.0",
    "nanoid": "^3.3.4",
    "nodemailer": "^6.7.5",
    "pg": "^8.7.3",
    "dotenv": "^16.0.1",
    "redis": "^4.1.0"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.8",
    "@types/connect-redis": "^0.0.18",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.36",
    "@types/nodemailer": "^6.4.4",
    "nodemon": "^2.0.16",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2"
  }
}
